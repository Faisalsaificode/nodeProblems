<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Coding Ninjas</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="container mt-5">
      <table class="table table-primary table-hover table-striped">
        <thead>
          <tr>
            <th scope="col">id</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Image</th>
            <th scope="col">Rating</th>
            <th scope="col">Count</th>
          </tr>
        </thead>
        <tbody>
          <% if (products && products.length) { %>
            <% products.forEach(function(p) { %>
              <tr>
                <th scope="row"><%= p.id %></th>
                <td><%= p.title || p.name || '' %></td>
                <td style="max-width:400px; white-space:nowrap; overflow:hidden; text-overflow:ellipsis;">
                  <%= p.description || '' %>
                </td>
                <td><%= (typeof p.price !== 'undefined') ? p.price : '' %></td>
                <td>
                  <% if (p.image) { %>
                    <img src="<%= p.image %>" alt="img" style="width:60px;height:auto;object-fit:cover"/>
                  <% } else { %>
                    -
                  <% } %>
                </td>
                <td><%= (p.rating && p.rating.rate) ? p.rating.rate : (p.rating || '') %></td>
                <td><%= (p.rating && p.rating.count) ? p.rating.count : (p.count || '') %></td>
              </tr>
            <% }); %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center">No products available</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </body>
</html>
